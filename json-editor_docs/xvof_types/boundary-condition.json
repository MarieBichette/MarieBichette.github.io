{
  "type": "object",
  "properties": {
    "left-boundary": {
      "type": "object",
      "description": "Condition limite sur le bord gauche",
      "properties": {
        "bc-type": {
          "type": "string",
          "enum": ["pressure", "velocity"]
        },
        "bc-law": {
          "type": "string",
          "enum": ["constant", "ramp"]
        },
        "allOf": [
          {
            "if": {
              "properties": { "bc-law": { "const": "constant" } }
            },
            "then": {
              "properties": { "$ref": "bc-constant.json" }
            }
          },

          {
            "if": {
              "properties": { "bc-law": { "const": "ramp" } }
            },
            "then": {
              "properties": { "$ref": "bc-two-step.json" }
            }
          }
        ]
      }      
    }
  }
}
